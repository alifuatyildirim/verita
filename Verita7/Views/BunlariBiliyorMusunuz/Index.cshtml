    <script>
    $(document).ready(function () {
        $('.btn[data-toggle="collapse"]').click(function () {
            var icon = $(this).find('.collapse-icon');
            icon.toggleClass('collapsed', !$(this).attr('aria-expanded'));
        });

        // Pagination and search
        var items = $(".card");
        var numItems = items.length;
        var perPage = 5;

        items.slice(perPage).hide();

        $(".pagination").twbsPagination({
            totalPages: Math.ceil(numItems / perPage),
            visiblePages: 30,
            first: 'İlk',
            prev: 'Önceki',
            next: 'Sonraki',
            last: 'Son',
            onPageClick: function (event, page) {
                var showFrom = perPage * (page - 1);
                var showTo = showFrom + perPage;
                items.hide().slice(showFrom, showTo).show();
            }
        });

        $("#searchButton").click(function () {
            var searchText = $("#searchText").val().toLowerCase();
            items.each(function () {
                var description = $(this).find(".card-body").text().toLowerCase();
                if (description.indexOf(searchText) > -1) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
            $(".pagination").twbsPagination("destroy");
        });
    });


    </script> 