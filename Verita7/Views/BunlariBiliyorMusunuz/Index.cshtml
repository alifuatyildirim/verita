@using Verita.Common.Enums;
@using Verita.Domain.Entities;
@model List<BunlariBiliyorMusunuz>
@{
    ViewBag.BodyClass = "shop-header-shadow shop-home";
}
<link href="/Themes/Default/Content/css/pages/page.min.css?v=2020100520" rel="stylesheet" type="text/css" />
<main class="page-container mt-40">
    <div class="filter-box categoryNav">
        <ul>
            @foreach (var item in (List<Page>)ViewBag.PageCategories)
            {
                <li class="inactive">
                    <a href="/Page?pageId=@item.Id">
                        @item.Name
                    </a>
                </li>
            }
            <li class="inactive">
                <a href="/bunlari-biliyor-musunuz/">
                    Bunları Biliyor Musunuz?
                </a>
            </li>
        </ul>
    </div>
    <div class="container container-bg">
        <div class="page-nav-header">
            <div class="category-info">
                <div class="breadcrumb">
                    <ul style="display: flex; list-style: none; padding: 0;margin:0;font-size:14px">
                        <li style=" padding: 0 10px 0px 0; color :#046a38">
                            <a href="/" title="Anasayfa">Anasayfa</a>
                            <span class="delimiter">></span>
                        </li>
                        <li style=" padding: 0 10px 0px 0; color:#7AB929">
                            <span class="current-item">Bunları Biliyor Musunuz?</span>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="heading-title">
            <h4>Bunları Biliyor Musunuz?</h4>

        </div>
        <div class="page-content pe-0">

            <div class="row justify-content-end">
                <div class="col-md-3">
                    <input type="text" class="form-control" id="searchText" placeholder="Aranacak metin" />
                </div>
                <div class="col-md-1">
                    <div class="row">
                        <div class="col-md-7">
                            <a href="#" class="btn btn-primary" id="searchButton">Ara</a>
                        </div>
                    </div>
                </div>
            </div>
            <div id="accordion" class="pt-10">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-header" id="heading@(item.Id)">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse@(item.Id)" aria-expanded="true" aria-controls="collapse@(item.Id)">
                                    <span class="collapse-icon"></span> @Html.DisplayFor(model=>item.Title)
                                </button>
                            </h5>
                        </div>

                        <div id="collapse@(item.Id)" class="collapse" aria-labelledby="heading@(item.Id)" data-parent="#accordion">
                            <div class="card-body">
                                @Html.DisplayFor(model=>item.Description)
                            </div>
                        </div>
                    </div>
                }
            </div>
            <ul class="pagination">
            </ul>
        </div>
    </div>
</main>
