@using Verita.Common.Enums;
@model IEnumerable<Verita.Domain.Entities.Page>

@{
    ViewData["Title"] = "Page List";
}

<h1>Page List</h1>

<div class="mb-3">
    <a href="@Url.Action("Create", "Page")" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Title</th>
            <th>Category</th>
            <th>SortOrder</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pageModel in Model)
        {
            <tr>
                <td>@pageModel.Id</td>
                <td>@pageModel.Name</td>
                <td>@pageModel.Title</td>
                <td>@pageModel.PageCategory</td>
                <td>@pageModel.SortOrder</td>
                <td>@((Language)pageModel.LanguageId)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Page Actions">
                        <a href="@Url.Action("Edit", "Page", new { id = pageModel.Id })" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-controller="Page" asp-route-id="@pageModel.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this page?')" class="delete-form">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
