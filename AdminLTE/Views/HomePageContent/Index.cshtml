@using Verita.Common.Enums;
@model IEnumerable<Verita.Domain.Entities.HomePageContent>

@{
    ViewBag.Title = "Home Page Content List";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Home Page Content List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="mb-3">
            <a href="@Url.Action("Create", "HomePageContent")" class="btn btn-success float-left">Create New</a>
            <div class="clearfix"></div>
        </div>
        <table id="categoryTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>  
                    <th>ContentType</th>  
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in Model)
                {
                    <tr>
                        <td>@content.Id</td>
                        <td>@content.Title</td>
                        <td>@content.ContentType.ToString()</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Category Actions">
                                <a href="@Url.Action("Edit", "HomePageContent", new { id = content.Id })" class="btn btn-primary">Edit</a>
                                <form asp-action="Delete" asp-controller="HomePageContent" asp-route-id="@content.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this Content?')" class="delete-form">
                                    <input type="hidden" name="id" value="@content.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
