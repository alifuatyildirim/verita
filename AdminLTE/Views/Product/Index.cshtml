@using Verita.Common.Enums;
@model IEnumerable<Verita.Domain.Entities.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<div class="mb-3">
    <a href="@Url.Action("Create", "Product")" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Title</th>
            <th>Category</th>
            <th>SortOrder</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Title</td>
                <td>@product.Category.Name</td>
                <td>@product.SortOrder</td>
                <td>@((Language)product.LanguageId)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Product Actions">
                        <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?')" class="delete-form">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
