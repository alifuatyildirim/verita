@using Verita.Common.Enums;
@model IEnumerable<Verita.Domain.Entities.Hakkimizda>

@{
    ViewData["Title"] = "Hakkimizda List";
}

<h1>Hakkimizda List</h1>

<div class="mb-3">
    <a href="@Url.Action("Create", "Hakkimizda")" class="btn btn-success">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th> 
            <th>Title1</th> 
            <th>SortOrder</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hakkimizda in Model)
        {
            <tr>
                <td>@hakkimizda.Id</td> 
                <td>@hakkimizda.Title1</td> 
                <td>@hakkimizda.SortOrder</td>
                <td>@((Language)hakkimizda.LanguageId)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Hakkimizda Actions">
                        <a href="@Url.Action("Edit", "Hakkimizda", new { id = hakkimizda.Id })" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-controller="Hakkimizda" asp-route-id="@hakkimizda.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this hakkimizda?')" class="delete-form">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
