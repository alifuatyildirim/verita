@using Verita.Common.Enums;
@model IEnumerable<Verita.Domain.Entities.Category>

@{
    ViewBag.Title = "Category List";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="mb-3">
            <a href="@Url.Action("Create", "Category")" class="btn btn-success float-left">Create New</a>
            <div class="clearfix"></div>
        </div>
        <table id="categoryTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Language</th>
                    <th>Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@((Language)category.LanguageId)</td>
                        <td>@category.SortOrder</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Category Actions">
                                <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-primary">Edit</a>
                                <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?')" class="delete-form">
                                    <input type="hidden" name="id" value="@category.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
